!!! html5
%html.no-js
  %head
    %title Clogs Membership Database
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = favicon_link_tag 'favicon.ico?v=2'
    :javascript
      document.documentElement.className = "js";
      $(function(){$('.nojs-section').remove()});
    = csrf_meta_tags

  %body
    #gradient-bg

    %header
      - if user_signed_in?
        = raw("Signed in as #{current_user.email} | " + link_to('Sign out', destroy_user_session_path, method: :delete))

    #flash
      = render partial: 'shared/flash', object: flash

    - if controller_name == 'sessions'
      = yield
    - else
      #content
        = yield