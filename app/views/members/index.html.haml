%h1 All members

%table.tablekit.sortable
  %thead
    %tr
      %th.sortcol Forename
      %th.sortcol.sortfirstasc Surname
      %th.sortcol Addr1
      %th.sortcol Addr2
      %th.sortcol Addr3
      %th.sortcol Town
      %th.sortcol County
      %th.sortcol Postcode
      %th.sortcol.text Phone
      %th.sortcol.text Mobile
      %th.sortcol Voice
      %th.sortcol Membership
      %th.sortcol Email
      %th.sortcol Subs paid
      %th.sortcol Show paid
      %th.sortcol Concert paid
      %th.nosort
      %th.nosort
      %th.nosort

  %tbody
    - @members.each do |member|
      %tr
        %td= member.forename
        %td= member.surname
        %td= member.addr1
        %td= member.addr2
        %td= member.addr3
        %td= member.town
        %td= member.county
        %td= member.postcode
        %td= member.phone
        %td= member.mobile
        %td= member.voice
        %td= member.membership
        %td= member.email
        %td= member.subs_paid
        %td= member.show_fee_paid
        %td= member.concert_fee_paid
        %td= link_to 'Show', member
        %td= link_to 'Edit', edit_member_path(member)
        %td= link_to 'Destroy', member, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Member', new_member_path
